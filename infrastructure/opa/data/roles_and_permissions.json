{
  "roles": {
    "superadmin": {
      "name": "Super Administrator",
      "description": "Full system access with no restrictions",
      "level": 10,
      "permissions": ["*"]
    },
    "admin": {
      "name": "Administrator", 
      "description": "System administration with most privileges",
      "level": 8,
      "permissions": [
        "user.create", "user.read", "user.update", "user.delete",
        "role.create", "role.read", "role.update", "role.delete",
        "permission.create", "permission.read", "permission.update", "permission.delete",
        "drone.read", "drone.update", 
        "system.configure", "audit.read"
      ]
    },
    "drone_admin": {
      "name": "Drone Administrator",
      "description": "Full drone system management",
      "level": 8,
      "permissions": [
        "drone.create", "drone.read", "drone.update", "drone.delete",
        "drone.command.all", "drone.status.all", "drone.archive.all"
      ]
    },
    "department_manager": {
      "name": "Department Manager",
      "description": "Manages users within their department",
      "level": 6,
      "permissions": [
        "user.read.department", "user.update.department",
        "report.generate.department", "audit.read.department"
      ]
    },
    "flight_controller": {
      "name": "Flight Controller",
      "description": "Controls drone flight operations",
      "level": 5,
      "permissions": [
        "drone.command.create", "drone.command.read", "drone.command.update",
        "drone.status.read", "drone.realtime.read"
      ]
    },
    "drone_operator": {
      "name": "Drone Operator",
      "description": "Operates assigned drones",
      "level": 4,
      "permissions": [
        "drone.command.assigned", "drone.status.assigned", 
        "drone.position.assigned"
      ]
    },
    "mission_commander": {
      "name": "Mission Commander",
      "description": "Manages mission tasks and archives",
      "level": 7,
      "permissions": [
        "mission.create", "mission.read", "mission.update", "mission.delete",
        "archive.create", "archive.read", "archive.update", "archive.delete"
      ]
    },
    "maintenance_technician": {
      "name": "Maintenance Technician",
      "description": "Maintains drone systems",
      "level": 4,
      "permissions": [
        "drone.status.update", "drone.maintenance.all",
        "archive.read", "diagnostic.run"
      ]
    },
    "monitor_operator": {
      "name": "Monitor Operator",
      "description": "Monitors system status and operations",
      "level": 2,
      "permissions": [
        "drone.status.read", "drone.position.read", 
        "system.monitor", "alert.read"
      ]
    },
    "emergency_responder": {
      "name": "Emergency Responder",
      "description": "Emergency operations access",
      "level": 6,
      "permissions": [
        "emergency.override", "drone.command.emergency",
        "system.emergency", "alert.create"
      ]
    },
    "user": {
      "name": "Regular User",
      "description": "Basic user with limited access",
      "level": 1,
      "permissions": [
        "profile.read", "profile.update",
        "preference.read", "preference.update", "preference.create"
      ]
    },
    "auditor": {
      "name": "System Auditor",
      "description": "Read-only access for auditing",
      "level": 4,
      "permissions": [
        "audit.read", "log.read", "report.read",
        "user.read", "role.read", "permission.read"
      ]
    }
  },
  
