# Drone Service Environment Variables

# Service Configuration
SERVICE_NAME=drone-service
NODE_ENV=development

# Server Ports
HTTP_PORT=3052
GRPC_PORT=50052

# Database Configuration - Drone MySQL
DB_HOST=aiot-drone-mysql
DB_PORT=3306
DB_NAME=drone_db
DB_USER=admin
DB_PASSWORD=admin
DB_DIALECT=mysql

# MongoDB Configuration
MONGODB_URL=mongodb://admin:admin@aiot-mongodb:27017/main_db?authSource=admin

# Redis Configuration
REDIS_HOST=aiot-redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://aiot-redis:6379/0
REDIS_PASSWORD=

# RabbitMQ Configuration
RABBITMQ_URL=amqp://admin:admin@aiot-rabbitmq:5672/

# JWT Configuration
JWT_SECRET=zanewnch
JWT_EXPIRES_IN=24h

# Consul Configuration
CONSUL_HOST=consul
CONSUL_PORT=8500

# OPA Configuration
OPA_URL=http://aiot-opa:8181

# API Gateway
API_BASE_URL=http://localhost:8000

# Microservices Communication
RBAC_SERVICE_URL=aiot-rbac-service:50051
GENERAL_SERVICE_URL=aiot-general-service:50053

# Logging
LOG_LEVEL=debug

# Database Pool Configuration
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_IDLE=10000
DB_POOL_ACQUIRE=60000
DB_POOL_EVICT=1000
DB_ACQUIRE_TIMEOUT=60000
DB_QUERY_TIMEOUT=60000
DB_CONNECT_TIMEOUT=60000

# CORS Configuration
FRONTEND_URL=http://localhost:3000