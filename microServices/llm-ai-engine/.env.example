# AI Engine Configuration
PORT=8021

# Service Type Configuration
# Set to "true" to use LangChain AI Service (with memory and RAG support)
# Set to "false" to use Simple AI Service (faster but basic)
USE_LANGCHAIN=true

# Model Configuration
MODEL_NAME=HuggingFaceTB/SmolLM2-135M-Instruct
DEVICE=cpu

# LangChain Configuration (only used when USE_LANGCHAIN=true)
EMBEDDINGS_MODEL=sentence-transformers/all-MiniLM-L6-v2
VECTOR_DB_PATH=./chroma_db
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MEMORY_K=5

# Logging
LOG_LEVEL=INFO