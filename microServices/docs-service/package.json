{
  "name": "docs-service",
  "version": "1.0.0",
  "description": "AIOT Documentation Service - Serves TypeDoc documentation for all microservices",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node --import tsx/esm src/server.ts",
    "start:grpc": "node --import tsx/esm src/server-grpc.ts",
    "dev": "npx nodemon --exec \"node --import tsx/esm\" src/server.ts",
    "dev:grpc": "npx nodemon --exec \"node --import tsx/esm\" src/server-grpc.ts",
    "build": "npx tsc",
    "build:watch": "tsc --watch",
    "serve": "node ./dist/server.js"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.9.0",
    "@grpc/proto-loader": "^0.7.8",
    "@types/ejs": "^3.1.5",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "serve-static": "^1.15.0",
    "tsx": "^4.0.0",
    "typedoc": "^0.25.13"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^20.19.9",
    "@types/serve-static": "^1.15.7",
    "nodemon": "^3.1.10",
    "typescript": "^5.4.5"
  }
}
