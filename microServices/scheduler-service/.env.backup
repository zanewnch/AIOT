# Scheduler Service Environment Configuration
SERVICE_NAME=scheduler-service
HTTP_PORT=3001

# Database Configuration - PostgreSQL (not MySQL)
DB_HOST=aiot-drone-postgres
DB_NAME=drone_db
DB_USER=admin
DB_PASSWORD=admin
DB_PORT=5432

# RabbitMQ Configuration
RABBITMQ_URL=amqp://admin:admin@aiot-rabbitmq:5672/
RABBITMQ_PREFETCH=10
RABBITMQ_RECONNECT_DELAY=5000
RABBITMQ_MAX_RECONNECT_ATTEMPTS=10

# Redis Configuration
REDIS_URL=redis://aiot-redis:6379/0

# Application Configuration
NODE_ENV=development
LOG_LEVEL=debug

# Consul Configuration
CONSUL_HOST=consul
CONSUL_PORT=8500

# Notification Configuration
NOTIFICATION_EMAIL_FROM=noreply@aiot-system.com
NOTIFICATION_EMAIL_SMTP_HOST=smtp.example.com
NOTIFICATION_EMAIL_SMTP_PORT=587
NOTIFICATION_EMAIL_SMTP_USER=
NOTIFICATION_EMAIL_SMTP_PASS=
NOTIFICATION_WEBHOOK_URL=
