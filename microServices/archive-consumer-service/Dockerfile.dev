# ==================================================
# Archive Consumer Service - Development Dockerfile
# ==================================================

FROM node:18-alpine

# 設定工作目錄
WORKDIR /app

# 安裝系統依賴
RUN apk add --no-cache curl netcat-openbsd

# 先複製 shared-packages
COPY aiot-shared-packages ./aiot-shared-packages

# 複製源代碼（包含 package.json）
COPY microServices/archive-consumer-service .

# 安裝 shared-packages 並安裝依賴
RUN cd aiot-shared-packages && npm install && npm run build && cd .. && \
    npm cache clean --force && npm install ./aiot-shared-packages --no-package-lock

# 建立日誌目錄
RUN mkdir -p /app/logs

# 設定環境變數
ENV NODE_ENV=development

# 暴露端口
EXPOSE 3005

# 啟動命令 - 使用 ts-node-dev 支援 hot reload
CMD ["npm", "run", "dev"]