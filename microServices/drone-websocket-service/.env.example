# Drone WebSocket Service Environment Variables

# Service Configuration
SERVICE_NAME=drone-websocket-service
NODE_ENV=development

# Server Port
SERVICE_PORT=3004

# Database Configuration - Shared with Drone Service
DB_HOST=aiot-drone-mysql
DB_PORT=3306
DB_NAME=drone_db
DB_USER=admin
DB_PASSWORD=admin

# Redis Configuration
REDIS_HOST=aiot-redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=zanewnch

# Consul Configuration
CONSUL_HOST=consul
CONSUL_PORT=8500

# OPA Configuration
OPA_URL=http://aiot-opa:8181

# CORS Configuration
CORS_ORIGIN=*
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=debug

# Database Pool Configuration
DB_POOL_MAX=10
DB_POOL_MIN=2
DB_POOL_IDLE=30000
DB_POOL_ACQUIRE=30000
DB_POOL_EVICT=1000