# act CI/CD 環境變數配置文件
# 用於本地 GitHub Actions 執行環境

# 通用設定
NODE_ENV=test
CI=true

# 測試用資料庫設定 (無需真實連線)
DB_HOST=localhost
DB_PORT=5432
DB_USER=test_user
DB_PASSWORD=test_pass

# Redis 測試設定
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# JWT 測試設定
JWT_SECRET=test_jwt_secret_for_ci
JWT_EXPIRES_IN=24h

# 服務端口設定 (避免與開發環境衝突)
RBAC_SERVICE_PORT=50051
DRONE_SERVICE_PORT=50052
GENERAL_SERVICE_PORT=50053
AUTH_SERVICE_PORT=50055
GATEWAY_PORT=8000

# 測試報告路徑
CI_REPORTS_DIR=./ci-reports
TIMESTAMP=$(date +%Y%m%d-%H%M%S)

# Python 服務設定
PYTHONPATH=/app
PYTHON_ENV=test