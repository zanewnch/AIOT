# 微服務專用環境變數
# 用於 CI/CD 測試環境

# 微服務間通訊設定 (測試環境)
RBAC_SERVICE_HOST=localhost
RBAC_SERVICE_URL=localhost:50051
DRONE_SERVICE_HOST=localhost
DRONE_SERVICE_URL=localhost:50052
GENERAL_SERVICE_HOST=localhost
GENERAL_SERVICE_URL=localhost:50053
AUTH_SERVICE_HOST=localhost
AUTH_SERVICE_URL=localhost:50055

# 測試用資料庫名稱
RBAC_DB_NAME=rbac_test
DRONE_DB_NAME=drone_test
GENERAL_DB_NAME=general_test
AUTH_DB_NAME=auth_test

# gRPC 設定
GRPC_KEEPALIVE_TIME=30
GRPC_KEEPALIVE_TIMEOUT=5
GRPC_MAX_RECEIVE_MESSAGE_LENGTH=4194304

# 日誌設定
LOG_LEVEL=info
LOG_FORMAT=json

# 測試模式設定
SKIP_DB_CONNECTION=true
SKIP_EXTERNAL_SERVICES=true
MOCK_MODE=true